<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <%= @saver.first_name %>
      <!-- carte de profil -->
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <% @saver.reviews.each do |review| %>
        <%= review.content %>
      <% end %>
      <%= simple_form_for [@saver, @review] do |f| %>
        <%= f.input :content %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
