

<% content_for(:title) do %>
<%= @current_user.first_name.capitalize %>, your informations
<% end %>



<div class="container-fluid client-view">
  <div class="row">

     <div class="col-sm-6 col-md-offset-1">
      <div class="row">

          <div class="col-sm-2 col-xs-hidden">
            <%= image_tag "profil", height: '70', class: 'img-circle', style: 'margin-top: 22px' %>
          </div>

          <div class="col-sm-10">
<!-- displaying the name of the client -->
              <h1>
               <strong>All about <%= current_user.first_name.capitalize %></strong>
              </h1>
              <br></br>
              <div class='card-problem'>
              <h1> Your personnal informations </h1>
              <p> First name: <%= current_user.first_name %></p>
              <p> Email: <%= current_user.email %></p>
              <p> Phone number: <%= current_user.phone.gsub(/\s+/, "").gsub(/^\+?33/, "0").gsub(/(.{2})(?=.)/, '\1 \2') %></p>
              <br></br>
               </div>
              <% @current_user.problems.each do |problem| %>
                <div class='card-problem'>
                  <p>Date: <%= problem.created_at.strftime("%d %b. %Y") %></p>
                  <p>Adress: <%= problem.address %></p>
                  <p>Repair: <%= problem.category %></p>
                </div>
                <br></br>
              <% end %>


               <br></br>
              <%= link_to "get back to home", root_path, class: "btn btn-brand" %>
        </div>
      </div>
    </div>
  </div>
</div>

