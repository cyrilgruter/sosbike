

<% content_for(:title) do %> Hello
  <%= @repair.client.first_name %>
<% end %>



<!-- le code des filles -->

<div class="banner">
  <span class="banner-bg" style="background-image: url("background-image.jpeg"); backgroun-position: center center;"></span>
  <span class="banner-gradient"></span>

</div>



<br></br>
