<section class="cd-intro">
  <div class="cd-intro-content bouncy">
    <div class="banner">
      <div class="banner-content">
      <div class="banner-text">
        <h1>You will never ride alone</h1>
        <p>Roue crevée? chaine cassée? Nous vous dépannons en 30 minutes!</p>
      </div>
      <%= form_tag(new_repair_path, method: :get) do %>
        <div class="form-group">
          <div class="col-xs-offset-2 col-xs-8">
            <%= text_field_tag :address, nil, class: "form-control", placeholder: "Adresse", id: "user_input_autocomplete_address" %>
             <%= text_field_tag :postal_code, nil, class: "form-control", id: "postal_code", :type => "hidden"%>
          </div>
        </div>
        <div class="form-group">
          <div class="action-wrapper">
            <%= submit_tag "Aidez-moi!", class: "btn btn-danger cd-btn main-action" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>

<div class="wrapper">
  <div class="container">
    <div class="row">
       <h1 class="text-center">Comment ça marche ?</h1>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <h2 class="text-center">Etape 1</h2>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <h2 class="text-center">Etape 2</h2>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <h2 class="text-center">Etape 3</h2>
        </div>
      </div>
    </div>
  </div>
</div>

