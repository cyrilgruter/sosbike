<section class="cd-intro">
  <div class="cd-intro-content bouncy">
    <div class="background-home">
      <div class="gradient">
        <div class="content text-center">
          <h1>An angel fixes your bike in 30 minutes!</h1>
          <p style="font-size: 150%;">Flat tyre? Broken chain? We come to fix it everywhere in London!</p>
            <%= form_tag(new_repair_path, method: :get, class: "form-inline form-home") do %>
              <%= text_field_tag :address, nil, class: "form-control", placeholder: "Address", id: "user_input_autocomplete_address"%>
              <%= text_field_tag :postal_code, nil, class: "form-control", id: "postal_code", :type => "hidden"%>
              <%= submit_tag "Rescue me now!", class: "btn btn-brand"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




